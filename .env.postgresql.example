# =============================================================================
# BELLA V3 - DEVELOPMENT ENVIRONMENT (PostgreSQL)
# Professional development setup matching production database type
# =============================================================================

# CORE APPLICATION SETTINGS
BELLA_API_KEY="bella-dev-key-2024"
APP_ENV="development"

# POSTGRESQL DATABASE (same type as production)
# Configure these for your local PostgreSQL setup:
DATABASE_URL="postgresql+asyncpg://postgres:your_password@localhost:5432/bella_dev"
PRODUCTION_BASE_URL="https://your-production-domain.com"

# Alternative: Individual parameters (if DATABASE_URL not working)
POSTGRES_HOST="localhost"
POSTGRES_PORT=5432
POSTGRES_DB="bella_dev"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="your_password"

# EXTERNAL SERVICE CREDENTIALS
OPENAI_API_KEY="sk-your-openai-key-here"
TWILIO_ACCOUNT_SID="AC_your_twilio_sid"
TWILIO_AUTH_TOKEN="your_twilio_token"
TWILIO_PHONE_NUMBER="+1234567890"

# SESSION AND CACHING
REDIS_URL="redis://localhost:6379/0"

# SECURITY (development settings)
ADMIN_USER="admin"
ADMIN_PASS="admin123"
CSRF_SECRET="dev-csrf-secret-key-change-in-production"
ENABLE_TWILIO_SIGNATURE_VALIDATION="false"
ENABLE_CORS_PROTECTION="false"
ENABLE_RATE_LIMITING="false"
ALLOWED_ORIGINS="http://localhost:8000,http://127.0.0.1:8000"

# LOGGING AND MONITORING
LOG_LEVEL="DEBUG"
ENABLE_DEBUG_LOGGING="true"
ENABLE_TEST_ENDPOINTS="true"
ENABLE_WEBHOOK_DEBUGGING="true"

# PERFORMANCE (development)
DB_POOL_SIZE="5"
DB_MAX_OVERFLOW="10"
CACHE_TTL="300"

# FEATURE FLAGS
ENABLE_COST_TRACKING="true"
ENABLE_BUSINESS_METRICS="true"
ENABLE_CIRCUIT_BREAKERS="true"